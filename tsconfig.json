{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "noLib": false,
    "target": "ES2021",
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "paths": {
      "@imhotest/core": ["./src/core/index.ts"],
      "@imhotest/predicates": ["./src/predicates/index.ts"],
      "@imhotest/model": ["./src/model/index.ts"],
      "@imhotest/transformers": ["./src/transformers/index.ts"],
      "@imhotest/builders": ["./src/builders/index.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
